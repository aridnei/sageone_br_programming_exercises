<div class="page-header">
  <h1>Products <small>Listing</small></h1>
</div>

<table class="table table-striped table-bordered table-hover table-responsive">
  <thead>
    <tr>
      <th>Code</th>
      <th>Description</th>
      <th>Unity</th>
      <th>Barcode</th>
      <th>Ncm</th>
      <th>Type</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.code %></td>
        <td><%= product.description %></td>
        <td><%= product.unity %></td>
        <td><%= product.barcode %></td>
        <td><%= product.ncm %></td>
        <td><%= product.product_type %></td>
        <td><%= product.current_state.description %></td>
        <td><%= link_to 'Show', product, class: 'btn btn-primary btn-xs' %></td>
        <td><%= link_to 'Edit', edit_product_path(product), class: 'btn btn-info btn-xs' %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Product', new_product_path, class: 'btn btn-success' %>
